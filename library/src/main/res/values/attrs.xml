<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CalendarView">
        <attr name="dayViewResource" format="reference" />
        <attr name="monthHeaderResource" format="reference" />
        <attr name="monthFooterResource" format="reference" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="outDateStyle" format="enum">
            <enum name="tillEndOfRow" value="0" />
            <enum name="tillEndOfGrid" value="1" />
        </attr>
        <attr name="scrollMode" format="enum">
            <enum name="continuous" value="0" />
            <enum name="paged" value="1" />
        </attr>
        <attr name="firstDayOfWeek" format="enum">
            <enum name="monday" value="0" />
            <enum name="tuesday" value="1" />
            <enum name="wednesday" value="2" />
            <enum name="thursday" value="3" />
            <enum name="friday" value="4" />
            <enum name="saturday" value="5" />
            <enum name="sunday" value="6" />
        </attr>
    </declare-styleable>
</resources>